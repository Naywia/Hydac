<Page x:Class="Hydac.Views.AddComponentView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hydac.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddComponentView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Label Grid.Column="1" Grid.Row="1" Content="Navn"/>
        <TextBox Grid.Column="2" Grid.Row="1" Text="{Binding Name}"/>
        <Label Grid.Column="1" Grid.Row="3" Content="Delnummer"/>
        <TextBox Grid.Column="2" Grid.Row="3" Text="{Binding PartNumber}"/>
        <Label Grid.Column="1" Grid.Row="5" Content="Serienummer"/>
        <TextBox Grid.Column="2" Grid.Row="5" Text="{Binding SerialNumber}"/>
        <Label Grid.Column="1" Grid.Row="7" Content="Varenummer"/>
        <TextBox Grid.Column="2" Grid.Row="7" Text="{Binding ItemNumber}"/>
        <Label Grid.Column="1" Grid.Row="9" Content="Parti"/>
        <TextBox Grid.Column="2" Grid.Row="9" Text="{Binding Batch}"/>
        <Label Grid.Column="1" Grid.Row="11" Content="Type"/>
        <TextBox Grid.Column="2" Grid.Row="11" Text="{Binding Type}"/>
        <Label Grid.Column="1" Grid.Row="13" Content="Serviceinterval"/>
        <TextBox Grid.Column="2" Grid.Row="13" Text="{Binding ServiceInterval}"/>
        <Button Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="15" Content="Tilføj komponent" Command="{Binding AddComponentCommand}"/>
    </Grid>
</Page>
